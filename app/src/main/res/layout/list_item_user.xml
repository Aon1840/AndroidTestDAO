<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_message"
    android:background="@drawable/message_box"
    android:padding="@dimen/mess_box_padding"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCarPositionId"
            style="@style/header_font_size_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mess_margin_right"
            android:text="Name" />

        <TextView
            android:id="@+id/tvPositionId"
            style="@style/header_font_size_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mess_margin_right"
            android:text="Surname" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvUserId"
        style="@style/header_font_size_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="aon_attapon@hotmail.com" />

    <LinearLayout
        android:id="@+id/dateTimeMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvTime"
            style="@style/mess_time_martop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mess_margin_right"
            android:text="Date Time " />


    </LinearLayout>

</LinearLayout>